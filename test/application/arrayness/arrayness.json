{
  "$schema": "http://json-schema.org/schema#",
  "id": "json schema example",
  "type": "object",
  "properties": {
    "type": "object",
    "arrays_defs": {
      "id": "/properties/arrays_defs",
      "type": "integer",
      "minimum": 1,
      "maximum": 6
    },
    "array_def": {
      "id": "/properties/array_def",
      "type": "array",
      "length": {
        "$ref": "/properties/arrays_defs"
      },
      "items": {
        "id": "/properties/array_def/items",
        "type": "object",
        "properties": {
          "id": "/properties/array_def/items/properties",
          "type": "object",
          "k": {
            "id": "/properties/test_case/items/properties/k",
            "type": "integer"
          },
          "values": {
            "id": "/properties/array_def/items/properties/values",
            "type": "array",
            "length": {
              "$ref": "/properties/array_def/items/properties/k"
            },
            "items": {
              "id": "/properties/array_def/items/properties/values/items",
              "type": "integer"
            }
          }
        }
      }
    }
  }
}
